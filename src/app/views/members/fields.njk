<div class="item">
    <div>Avatar URL</div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}">
</div>

<div class="item">
    <div>Nome do membro</div>
    <input type="text" name="name" placeholder="Nome do membro" value="{{member.name}}">
</div>
<div class="item">
    <div>E-mail</div>
    <input type="email" name="email" placeholder="exemple@exemple.com" value="{{member.email}}">
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <input type="date" name="birth" value="{{member.birth}}">
</div>
<div class="item">
    <div>Sexo</div>
    <span><input type="radio" name="gender" value="M" {% if member.gender == "M" %} checked="checked" {% endif %}>Masculino</span>
    <span><input type="radio" name="gender" value="F" {% if member.gender == "F" %} checked="checked" {% endif %}>Feminino</span>
</div>
<div class="item">
    <div>Tipo sangu√≠neo</div>
    <select name="blood">
        <option value="A1" {% if member.blood =="A1"%} selected="selected" {%endif%}>
            A+
        </option>
        <option value="A0" {% if member.blood =="A0"%} selected="selected" {%endif%}>
            A-
        </option>
        <option value="B1" {% if member.blood =="B1"%} selected="selected" {%endif%}>
            B+
        </option>
        <option value="B0" {% if member.blood =="B0"%} selected="selected" {%endif%}>
            B-
        </option>
        <option value="AB1" {% if member.blood =="AB1"%} selected="selected" {%endif%}>
            AB+
        </option>
        <option value="AB1" {% if member.blood =="AB1"%} selected="selected" {%endif%}>
            AB-
        </option>
        <option value="O1" {% if member.blood =="O1"%} selected="selected" {%endif%}>
            O+
        </option>
        <option value="O0" {% if member.blood =="O0"%} selected="selected" {%endif%}>
            O-
        </option>
    </select>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <input type="number" name="weight" value="{{member.weight}}">
</div>
<div class="item">
    <div>Altura (cm)</div>
    <input type="number" name="height" value="{{member.height}}">
</div>
<button class="btn-save" type="submit">Salvar</button>